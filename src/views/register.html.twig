{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('src/views/css/login.css') }}"/>
{% endblock %}

{% block content %}
    <div class="row">

        <div class="col-lg-4 login-box">
            <form action="{{ url('register_submit') }}" method="post" role="form">
                <div class="form-group">
                    <div class="row">
                        <label>
                            {{ 'email' | trans }}
                            <input type="email" name="email" placeholder="{{ 'email' | trans }}" class="form-control"
                                   value="{{ email is defined? email : '' }}">
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label>
                            {{ 'username' | trans }}
                            <input type="text" name="user" placeholder="{{ 'username' | trans }}" class="form-control"
                                   value="{{ user is defined? user : '' }}">
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label>
                            {{ 'password' | trans }}
                            <input type="password" name="password" placeholder="{{ 'password' | trans }}"
                                   class="form-control" value="{{ password is defined? password : '' }}">
                        </label>
                    </div>
                    <div class="row">
                        <label>
                            <input type="password" name="password_2" placeholder="{{ 'password' | trans }}"
                                   class="form-control" value="{{ password is defined? password : '' }}">
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">

                        <input type="submit" name="submit" value="register" class="btn btn-default"/>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        {#More content here#}
    </div>

{% endblock %}